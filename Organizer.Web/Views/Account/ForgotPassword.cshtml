@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using Abp.Web.Mvc.Extensions
@using Microsoft.Owin.Security
@model Organizer.Web.Models.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}
@section Styles
{
    <link href="~/Views/Account/Login.css" rel="stylesheet" />
}
@section Scripts{
    <script type="text/javascript" src="~/Views/Account/ForgotPassword.js"></script>
}


<div class="container">
    <div id="LoginArea" class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <form class="form-horizontal forgot-form" action="@(Url.Action("ForgotPassword", "Account"))" method="POST">
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>@L("ForgotPassword")</legend>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                            </div>
                        }

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="@L("Email")" required maxlength="@AbpUserBase.MaxEmailAddressLength">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" id="ForgotButton" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("SubmitLink")</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>

    </div>
</div>


