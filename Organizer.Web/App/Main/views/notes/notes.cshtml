<div ng-controller="notesCtrl">
    <h1>@L("Notes")</h1>
    <input class="form-control add-notes-input" placeholder="@L("LookingFor")..." type="text" ng-model="newNote.title" />
    <center class="input-notes-div">
        <button class="form-control btn btn-primary add-notes-btn" ng-click="addNote()">
            <i class="fa fa-plus"></i>@L("Add")
        </button>
    </center>
    <div class="note" ng-repeat="note in notes | filter: newNote.title | orderBy:'createdOn':true track by $index ">
        <span class="date">{{note.creationTime | date:"EEEE dd MMMM, yyyy 'at' h:mma"}}</span>
        <div class="note-title"> @L("Title"):<input class="note-input" ng-model="note.title" placeholder="{{note.title}}" ng-focus="noteFocus(note)" ng-blur="update(note)"/></div>
        <span class="icons">
            <i class="fa fa-check fa-lg" ng-if="note.edit == false" ng-click="update(note)"></i>
            <i class="fa fa-pencil fa-lg" ng-if="note.edit == true"></i>
            <i class="fa fa-trash-o fa-lg" ng-click="delete(note)"></i>
        </span>

        <textarea class="noteContent" ng-model="note.content" ng-focus="noteFocus(note)" ng-blur="update(note)" contenteditable="true">{{ note.content }}</textarea>
    </div>
</div>
