<div ng-controller="app.views.contacts.index as vm">
    <h1>@L("Contacts")</h1>
        <ul class="list-group">
            <li class="list-group-item">
                <h4>@L("Contacts"):</h4>
                <button ng-click="vm.openContactCreationModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i></button>
                <input class="form-control" placeholder="@L("SeachYourContactszOrAddUser")" type="text" ng-model="searchText">
                <contact class="list-group-item" ng-repeat="contact in vm.contacts | orderBy: 'fullName' | filter: searchText" >
                    <div class="parent-for-img">
                        <img class="contact-image" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSK4tha5ABLdaoT4xzAflM-ZzrLvI3WpbasdTCY7Auq5fkBMm0GMw" /> 
                    </div>
                    {{contact.fullName}}
                    <i ng-click="vm.deleteCurrentContact(contact)" class="fa fa-remove pull-right contact-label red"></i>
                    <i ng-click="vm.openContactUpdateModal(contact)" class="fa fa-edit pull-right contact-label blue"></i>
                </contact>
            </li>
        </ul>
</div>