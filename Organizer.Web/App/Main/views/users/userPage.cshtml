<div class="container" ng-controller="userpageCtrl">
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{user.userName}} Profile</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-10 col-lg-10 " align="center">  <i class="img-circle img-responsive"> </i> </div>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>First Name:</td>
                                        <td><input class="userpage-input" ng-model="user.name" placeholder="{{user.name}}"/></td>
                                    </tr>
                                    <tr>
                                        <td>Last Name</td>
                                        <td><input class="userpage-input" ng-model="user.surname" placeholder="{{user.surname}}"/></td>
                                    </tr>
                                    <tr>
                                        <td>Join Date</td>
                                        <td><p>{{user.creationTime | date:"EEEE dd MMMM, yyyy 'at' h:mma"}}</p></td>
                                    </tr>
                                    <tr>
                                        <td>Date of Birth</td>
                                        <td ng-show="user.birthday !== null"><input class="userpage-input" type="date" ng-model="user.birthday"  placeholder="mm-dd-yyyy"/></td>
                                        <td ng-show="user.birthday === null"><input class="userpage-input" type="date" ng-model="user.birthday" /></td>
                                    </tr>
                                    <tr>
                                        <td>Home Address</td>
                                        <td><input class="userpage-input" ng-model="user.adress" placeholder="{{user.adress}}" /></td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td><input class="userpage-input" ng-model="user.emailAddress" placeholder="{{user.emailAddress}}" /></td>
                                    </tr>
                                    <tr>
                                        <td>Phone number</td>
                                        <td><input class="userpage-input" ng-model="user.phoneNumber" placeholder="{{user.phoneNumder}}"/></td>
                                    </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer user-footer">
                    <span class="pull-right">
                        <a href="#" class="btn btn-primary" ng-click="save()">Save</a>
                    </span>
                </div>

            </div>
        </div>
    </div>
</div>
